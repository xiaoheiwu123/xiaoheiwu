            0% {
                transform: perspective(300px) rotateY(0deg);
            }
            100% {
                transform: perspective(300px) rotateY(-75deg); /* 增大开合角度 */
            }
        }

        @keyframes textShow {
            0% { opacity: 0; transform: translate(-50%, -40%); }
            100% { opacity: 1; transform: translate(-50%, -50%); }
