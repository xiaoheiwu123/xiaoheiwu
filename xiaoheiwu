        }

        /* 纯黑门板 */
        .door {
            width: 100%;
            height: 100%;
            background: #000; /* 改为纯黑色 */
            transform-origin: right center;
            clip-path: polygon(0 0, 100% 0, 80% 100%, 0 100%);
